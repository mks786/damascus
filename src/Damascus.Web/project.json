{
    "webroot": "wwwroot",
    "version": "1.0.0-*",

    "dependencies": {
        "Damascus.Core": "1.0.0-*",
        "Damascus.Workflow": "1.0.0-*",
        "Damascus.Message": "1.0.0-*",

        //Framework
        "Microsoft.AspNet.Mvc": "6.0.0-beta4",
        "Microsoft.AspNet.Authorization": "1.0.0-beta4",
        "Microsoft.AspNet.Server.IIS": "1.0.0-beta4",
        "Microsoft.AspNet.Server.WebListener": "1.0.0-beta4",
        "Microsoft.AspNet.StaticFiles": "1.0.0-beta4",
        "Microsoft.Framework.ConfigurationModel.Json": "1.0.0-beta4",
        
        //Dependency Injection
        "Castle.Windsor": "3.3.0",
        "Microsoft.Framework.DependencyInjection.Interfaces": "1.0.0-beta4",

        //NServiceBus
        "NServiceBus": "5.2.0",
        "NServiceBus.SqlServer": "2.1.2",
        "NServiceBus.CastleWindsor": "5.0.0",

        "Kestrel": "1.0.0-beta4"

    },

    "commands": {
        "web": "Microsoft.AspNet.Hosting --server Microsoft.AspNet.Server.WebListener --server.urls http://localhost:5000",
        "kestrel": "Microsoft.AspNet.Hosting --server Kestrel --server.urls http://localhost:5001"
    },

    "frameworks": {
        "dnx451": {},
    },

    "exclude": [
    "wwwroot",
    "node_modules",
    "bower_components"
  ],
    "publishExclude": [
    "node_modules",
    "bower_components",
    "**.xproj",
    "**.user",
    "**.vspscc"
  ]
}
